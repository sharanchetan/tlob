    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "+model=mlplob",
                "+dataset=btc",
                "hydra.job.chdir=False",
                "hydra.run.dir=.",
            ],
            "justMyCode": false
        }
    ]
}

